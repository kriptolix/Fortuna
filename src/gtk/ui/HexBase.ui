<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="HexBase" parent="GtkBox">
    <property name="orientation">1</property>
    <property name="halign">3</property>
    <child>
      <object class="GtkOverlay">
        <child>
          <object class="GtkImage" id="_image">
            <property name="icon-name">hexagon-symbolic</property>
            <property name="pixel-size">128</property>
          </object>
        </child>
        <child type="overlay">
          <object class="GtkOverlay">
            <child>
              <object class="HexDisplay" id="_display">                
              </object>
            </child>            
            <child type="overlay">
              <object class="HexButtons" id="_buttons">               
              </object>
            </child>            
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>